{
    "manifest_version": 3,
    "name": "Outlook Inbox Scraper",
    "version": "2.1",
    "description": "Notifies on new emails in Outlook by scraping the inbox DOM.",
    "permissions": [
        "notifications",
        "storage"
    ],
    "host_permissions": [
        "*://outlook.live.com/*",
        "*://outlook.office.com/*",
        "*://outlook.office365.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://outlook.live.com/*",
                "*://outlook.office.com/*",
                "*://outlook.office365.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}